{
  "taskmaster": {
    "version": "1.0.0",
    "initialized": "2025-01-24",
    "project": "Weaverse Project",
    "description": "Taskmaster configuration for managing tasks across the Weaverse multi-component ecosystem",
    "storage": {
      "location": "/workspace-configs/",
      "format": "json",
      "backup": true
    },
    "components": {
      "builder": {
        "path": "/builder/",
        "package_manager": "pnpm",
        "dev_commands": ["pnpm dev", "pnpm typecheck", "pnpm biome:fix"],
        "build_commands": ["pnpm build"],
        "quality_checks": ["pnpm typecheck", "pnpm biome:fix"]
      },
      "weaverse": {
        "path": "/weaverse/",
        "package_manager": "pnpm",
        "dev_commands": ["pnpm dev", "pnpm typecheck", "pnpm biome:fix"],
        "build_commands": ["pnpm build"],
        "quality_checks": ["pnpm typecheck", "pnpm biome:fix", "pnpm test"]
      },
      "agent": {
        "path": "/agent/",
        "package_manager": "bun",
        "dev_commands": ["bun dev", "bun run typecheck", "bun run biome:fix"],
        "build_commands": ["bun run build"],
        "quality_checks": ["bun run typecheck", "bun run biome:fix"]
      },
      "generator": {
        "path": "/generator/",
        "package_manager": "npm",
        "dev_commands": ["npm run dev"],
        "build_commands": ["npm run build"],
        "quality_checks": ["npm run typecheck"]
      },
      "mcp-server": {
        "path": "/mcp-server/",
        "package_manager": "npm",
        "dev_commands": ["npm run dev"],
        "build_commands": ["npm run build"],
        "quality_checks": ["npm run typecheck"]
      },
      "naturelle": {
        "path": "/naturelle/",
        "package_manager": "npm",
        "dev_commands": ["npm run dev", "npm run typecheck", "npm run biome:fix"],
        "build_commands": ["npm run build"],
        "quality_checks": ["npm run typecheck", "npm run biome:fix"]
      }
    },
    "workflow": {
      "task_creation": "automatic",
      "quality_gates": true,
      "biome_integration": true,
      "git_integration": true,
      "memory_bank_integration": true
    },
    "settings": {
      "auto_quality_check": true,
      "parallel_execution": true,
      "progress_tracking": true,
      "error_recovery": true
    }
  }
}